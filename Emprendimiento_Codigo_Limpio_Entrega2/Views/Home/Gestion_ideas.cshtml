@{
    ViewBag.Title = "Gestión de ideas";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&family=Ubuntu:wght@500&display=swap" rel="stylesheet">


<h1>INNOVACIÓN Y DESARROLLO DE IDEAS</h1>
<div class="parrafo">
    <h3>
        Lugar digital donde tus pensamientos toman forma.
        Ya sea que tengas ideas para un proyecto,
        un negocio o una historia, aquí puedes anotarlas,
        editarlas y verlas fácilmente.
    </h3>
</div>

<div class="botones">
    @using (Html.BeginForm("Crear_idea", "CrearIdea", FormMethod.Get))
    {
        <input type="submit" value="Crear idea" class="btn btn-primary crear_idea-btn" />
    }

    @using (Html.BeginForm("Detalles_idea", "Home"))
    {
        <input type="submit" value="Ver idea" class="btn btn-primary detalles_idea-btn" />
    }

    @using (Html.BeginForm("Editar_idea", "Home"))
    {
        <input type="submit" value="Editar idea" class="btn btn-primary editar_idea-btn" />
    }
</div>


