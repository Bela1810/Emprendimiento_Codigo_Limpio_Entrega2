@model Emprendimiento_Codigo_Limpio_Entrega2.Models.IdeaModel


@{
    ViewBag.Title = "Crear_idea";
}


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&family=Ubuntu:wght@500&display=swap" rel="stylesheet">

<h2>CREACIÓN DE IDEA</h2>

@using (Html.BeginForm("Crear_idea", "CrearIdea", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NombreIdea, "Nombre de su Idea", htmlAttributes: new { @class = "text" })
            <div class="control-label">
                @Html.EditorFor(model => model.NombreIdea, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreIdea, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InversionRequeridaIdea, "Inversión Requerida", htmlAttributes: new { @class = "text" })
            <div class="control-label">
                @Html.EditorFor(model => model.InversionRequeridaIdea, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InversionRequeridaIdea, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ObjetivosDeIngresosIdea, "Meta Ingresos", htmlAttributes: new { @class = "text" })
            <div class="control-label">
                @Html.EditorFor(model => model.ObjetivosDeIngresosIdea, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ObjetivosDeIngresosIdea, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.InversionInfraestructura, "Inversión Infraestructura", htmlAttributes: new { @class = "text" })
            <div class="control-label">
                @Html.EditorFor(model => model.InversionInfraestructura, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InversionInfraestructura, "", new { @class = "text-danger" })
            </div>


        </div>


        <div class="form-group">
            <div class="form-group">
                <input type="submit" value="Crear Idea" class="btn btn-default crear_idea btn" />
            </div>
        </div>
    </div>
}

<style>

    h2 {
        font-family: 'Roboto', sans-serif;
        margin-left:80px;
    }

    body {
        background-image: url('../../Imagenes/Imagen_3..png');
        background-size: 50%;
        background-color: #A5EAF3;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }
    
    .control-label{
        margin-bottom: 20px;
    }


    .text{
        margin-top: 15px;
        font-family: Consolas;
        font-size: 18px;
    }

    .form-horizontal{

        margin-left: 80px;
    }

    .crear_idea.btn {
        font-size: 16px;
        text-align: center;
        background-color: #F2A154;
        color: white;
        font-size: 18px;
        font-family: 'Roboto', sans-serif;
        font-family: 'Ubuntu', sans-serif;
        border-radius: 40px;
        cursor: pointer;
        position: relative;
        margin-left: 70px;
       
    }



</style>


